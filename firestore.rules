rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - allow authenticated users to read any user profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Products collection (marketplace listings)
    match /products/{productId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Allow owner to update any field including sold status
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Conversations collection (marketplace messaging)
    match /conversations/{convoId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participants && (
          // Can update their own lastRead timestamp
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastRead_' + request.auth.uid]) ||
          // Or update thread metadata (lastMessage, lastMessageTime)
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastMessage', 'lastMessageTime']) ||
          // Or both together
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastRead_' + request.auth.uid, 'lastMessage', 'lastMessageTime']) ||
          // Or update with updatedAt
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastMessage', 'lastMessageTime', 'updatedAt']) ||
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastRead_' + request.auth.uid, 'lastMessage', 'lastMessageTime', 'updatedAt'])
        );
      
      // Messages within conversations
      match /messages/{messageId} {
        allow read, create: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(convoId)).data.participants;
      }
    }
    
    // Legacy Messages collection (if still used)
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Rides collection
    match /rides/{rideId} {
      // Anyone authenticated can read rides
      allow read: if request.auth != null;
      
      // Anyone authenticated can create a ride
      allow create: if request.auth != null && 
                      request.resource.data.organizerId == request.auth.uid;
      
      // Allow updates if:
      // 1. User is the organizer (can update anything)
      // 2. User is joining/leaving (adding/removing themselves to participants array)
      // 3. User is updating their own lastRead timestamp
      allow update: if request.auth != null && (
        // Organizer can update anything
        request.auth.uid == resource.data.organizerId ||
        // Participant updating only their own lastRead timestamp
        (
          request.auth.uid in resource.data.participants &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastRead_' + request.auth.uid])
        ) ||
        // Non-organizer can only modify participants array
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['participants']) &&
          (
            // Joining: adding themselves
            (request.auth.uid in request.resource.data.participants &&
             !(request.auth.uid in resource.data.participants)) ||
            // Leaving: removing themselves
            (!(request.auth.uid in request.resource.data.participants) &&
             request.auth.uid in resource.data.participants)
          )
        )
      );
      
      // Only organizer can delete
      allow delete: if request.auth != null && 
                      request.auth.uid == resource.data.organizerId;
      
      // Messages subcollection within rides - only participants can read and create
      match /messages/{messageId} {
        allow read, create: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/rides/$(rideId)).data.participants;
      }
    }
    
    // Direct Messages - authenticated users can access their direct message threads
    match /directMessages/{threadId} {
      // Allow read if user is in participants OR if document doesn't exist yet (for creation)
      allow read: if request.auth != null && (
        !exists(/databases/$(database)/documents/directMessages/$(threadId)) ||
        request.auth.uid in resource.data.participants
      );
      
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.participants;
      
      // Allow participants to update only their own lastRead timestamp or thread metadata
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participants && (
          // Can update their own lastRead timestamp
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastRead_' + request.auth.uid]) ||
          // Or update thread metadata (lastMessage, lastMessageTime, updatedAt)
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastMessage', 'lastMessageTime', 'updatedAt']) ||
          // Or both together
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastRead_' + request.auth.uid, 'lastMessage', 'lastMessageTime', 'updatedAt']) ||
          // Or lastRead with just lastMessage
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastRead_' + request.auth.uid, 'lastMessage']) ||
          // Or lastRead with just lastMessageTime
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastRead_' + request.auth.uid, 'lastMessageTime']) ||
          // Just lastMessage and lastMessageTime
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastMessage', 'lastMessageTime'])
        );
      
      // Messages within direct message threads
      match /messages/{messageId} {
        allow read, create: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/directMessages/$(threadId)).data.participants;
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
